{
  "manifest_version": 3,
  "name": "Mindfulness Timer",
  "version": "1.0.0",
  "description": "A mindful focus timer with achievements and statistics",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
} 